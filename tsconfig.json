{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "types": ["node", "jest"],
    "baseUrl": ".",
    "rootDir": "./src",
    "lib": ["es2020"]
  },
  "include": ["./src/**/*.ts", "./src/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
